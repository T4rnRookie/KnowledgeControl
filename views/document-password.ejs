<!-- views/document-password.ejs -->
<%- include('layout', { title: 'Enter Document Password' }) %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Enter Document Password</h2>
          <% if (locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form action="/documents/<%= documentId %>/check-password" method="POST">
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout-end') %>